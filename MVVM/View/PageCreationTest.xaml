<Page x:Class="ApplicationInventaire.MVVM.View.PageCreationTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationInventaire.MVVM.View"
      xmlns:StaticVar="clr-namespace:ApplicationInventaire.Core.GlobalProjectData"
      mc:Ignorable="d"  
      Background="#116396"

      Title="PageCreationTest"
       d:DesignWidth="800"     

       d:DesignHeight="600" 
      

      >

    <Grid    Margin="50,50,45,185" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36*" />
            <ColumnDefinition Width="11*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="21*"/>

        </Grid.RowDefinitions>



        <Canvas  Grid.Row="0" Grid.Column="0" x:Name="myCanva" >


            <Image  x:Name="CurrentSectionImage"  
                    Stretch="UniformToFill"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Source="{Binding ImageSection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,50"
                    MouseLeftButtonDown="CurrentSectionImage_MouseLeftButtonDown"/>
            <Image x:Name="RedCircleImage" 
                   Source="C:\Users\regnaulte\Documents\VSPROJECTS\VisualStudio\ApplicationInventaire\Image\redCircle.png" Height="50" Width="50"/>

        </Canvas>




        <Grid Grid.Row="1" Grid.Column="0"  >


            <Button x:Name="selectFile" Click="ButtonClickOpenFile"
                    Width="60"
                    Height="30"
                    Content="Select File"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="10,10,10,10"/>


        </Grid>


        <Grid Grid.Row="0" Grid.Column="1">

            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <Label Content="X coordinates: " 
                           Background="Gray"
                           Height="30"
                           Width="90"
                           HorizontalAlignment="Center"
                           />
                    <Label
                x:Name="xCoordinate"
                Content="{Binding XCoordinate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"             
                Width="66"
               Background="Gray"

                Height="30"
                 Margin="0,10,0,10"
                 HorizontalAlignment="Right"
                 
                />

                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <Label Content="Y coordinates: " 
                    Background="Gray"
                     Height="30"
                     Width="90"
                     HorizontalAlignment="Left"/>

                    <Label x:Name="yCoordinate"
                Content="{Binding YCoordinate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"             
                    Width="66"
                    Background="Gray"
                    Height="30"
                    Margin="0,10,0,10"
                    HorizontalAlignment="Right" />
                </StackPanel>

            </StackPanel>
        </Grid>















    </Grid>
</Page>
