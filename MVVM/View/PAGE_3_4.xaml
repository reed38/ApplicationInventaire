<Page x:Class="ApplicationInventaire.MVVM.View.PAGE_3_4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationInventaire.MVVM.View"
      xmlns:StaticVar="clr-namespace:ApplicationInventaire.Core.GlobalProjectData"
      mc:Ignorable="d"  
      Background="#116396"

      Title="PAGE_3_4"
       d:DesignWidth="800"     

       d:DesignHeight="450" 
      

      >





    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*" />
            <ColumnDefinition Width="41*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <Canvas 
                x:Name="myCanva"
                Margin="10,10,10,10"
                MouseDown="Canva_MouseDown"
                >
            <Canvas.Background  >
                <ImageBrush ImageSource="{Binding ImageSection3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Stretch="Uniform" 
                            />
               
            </Canvas.Background>

            <Label Foreground="Red" 
               x:Name="LabelNameTag" 
               Content="{Binding CurrentPiece.PieceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               FontSize="20"
                   />

            <Image x:Name="RedCircleImage" 
                   Source="C:\Users\regnaulte\Documents\VSPROJECTS\VisualStudio\ApplicationInventaire\Image\redCircle.png"
                   Height="70"
                   Width="70"
                   Visibility="Hidden"/>

        </Canvas>




        <Grid Grid.Row="1" Grid.Column="0"   >

         

              


                <Button x:Name="ButtonPreviousSection"
                        Content="previous"
                        Height="25"
                        Width="50"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="40,0,40,0"
                        Click="ButtonClickPrevious"
/>
                <Button x:Name="ButtonNextSection"
                        Content="next"
                        Height="25"
                        Width="50"
                        Click="ButtonClickNext"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="40,0,40,0"/>



            

        </Grid>


















        </Grid >
</Page>
