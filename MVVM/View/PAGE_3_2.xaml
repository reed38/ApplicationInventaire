<Page x:Class="ApplicationInventaire.MVVM.View.PAGE_3_2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationInventaire.MVVM.View"
      xmlns:globalProjectData="clr-namespace:ApplicationInventaire.Core.GlobalProjectData"

      
      mc:Ignorable="d" 
      Title="PAGE_3_2"
      Background="#116396"
      d:DesignHeight="450" d:DesignWidth="800"
      
        MouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown"
      >


    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*" />
            <ColumnDefinition Width="41*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <Canvas 
                x:Name="myCanva"
                Margin="10,10,10,10"
           
                >
            <Canvas.Background  >
                <ImageBrush ImageSource="{Binding ImageSection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Stretch="Uniform" />

            </Canvas.Background>



            <Image x:Name="RedFrameImage" 
                   Source="{Binding RedFramePath,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Height="50"
                   Width="50"/>

        <Label Foreground="Red" 
               x:Name="LabelNameTag" 
               Content="{Binding CurrentPiece.PieceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               FontSize="22"
               FontWeight="Normal"
                   ></Label>

        </Canvas>


        <Grid Grid.Row="1" Grid.Column="0">


            <StackPanel Orientation="Horizontal"
                        Width="300"
                        Height="45"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">


                <Label Foreground="White" Content="Comment: " Height="30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                <TextBox x:Name="TextBoxComment"  Width="300" Height="50" TextWrapping="WrapWithOverflow"/>
            </StackPanel>


        </Grid>

        <Grid Grid.Row="1" Grid.Column ="1">


            <Button
                x:Name="SaveAndQuitButton"
                  Click="ButtonClickSaveAndQuit"
                Content="Save and quit"
                Width="100"
                Height="40"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" 
                Margin="10,10,10,10"
                
                />



        </Grid>

        <Grid Grid.Row="0" Grid.Column="1"  >

            <Popup x:Name="PopupNoSerialNumberConstructor" Placement="Center" IsOpen="False" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Border Background="LightGray" BorderBrush="Black" BorderThickness="1" Padding="10">
                    <TextBlock Text="PLease enter a serial Number!" />
                </Border>
            </Popup>
           

              
            <StackPanel  Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,20">
                <Image
                       Height="200"
                       Width="200"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    Stretch="Uniform"
                    Margin="0,10,0,20"
                    Name="ReleveImagepage"
                    Source="{Binding ImageReleve, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    
                 />
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <Label x:Name="labelSerialNumber" Content="Serial Number: " Foreground="White" VerticalAlignment="Top"                               Margin="10,0,0,10"
                    ></Label>
                    <TextBox  x:Name="TextBoxSerialNumber"
                              Width="100"
                              Margin="0,0,0,10"
                              />





                </StackPanel>
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <Label                             
                    Margin="10,0,0,10"
                    Content="Constructor:  " 
                        x:Name="labelConstructor"
                        Foreground="White"></Label>
                    <TextBox  x:Name="TextBoxConstructor"
                              Width="100"
                              Margin="10,0,0,10"

                              />

                </StackPanel>

                <Button
                x:Name="YesButton"
                  Click="ButtonClickYes"
                Content="yes"
                Width="66"
                Height="30"
                HorizontalAlignment="Center"
                 
                />

                <Button
                x:Name="NoButton"
                  Click="ButtonClickNo"
                Content="no"
                Width="66"
                Height="30"
                 HorizontalAlignment="Center"
                
                />



            </StackPanel>




        </Grid>












    </Grid>
</Page>
