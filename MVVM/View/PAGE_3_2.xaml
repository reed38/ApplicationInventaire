<Page x:Class="ApplicationInventaire.MVVM.View.PAGE_3_2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationInventaire.MVVM.View"
      xmlns:GlobalProjectData="clr-namespace:ApplicationInventaire.Core.GlobalProjectData"
      mc:Ignorable="d" 
      Title="PAGE_3_2"
      Background="#116396"
      d:DesignHeight="600" d:DesignWidth="800"
      

      >

    <Grid  PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown"  Margin="50,50,45,185" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*" />
            <ColumnDefinition />
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="21*"/>

        </Grid.RowDefinitions>


        <Canvas  Grid.Row="0" Grid.Column="0" x:Name="myCanva" >


            <Image  x:Name="CurrentSectionImage"  
                    Stretch="UniformToFill"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Source="{Binding ImageSection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,50"
                    />
            <Image x:Name="RedCircleImage" 
                   Source="C:\Users\regnaulte\Documents\VSPROJECTS\VisualStudio\ApplicationInventaire\Image\redCircle.png"
                   Height="25"
                   Width="25"/>
            <Label Foreground="Red" x:Name="LabelNameTag" Content="{Binding CurrentPiece.PieceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   ></Label>

        </Canvas>


        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,14,0">
            

            <StackPanel Orientation="Horizontal"
                        Width="300"
                        Height="45"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">


                <Label Foreground="White" Content="Comment: " Height="30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                <TextBox x:Name="TextBoxComment"  Width="300" Height="50" TextWrapping="WrapWithOverflow"/>
            </StackPanel>


        </Grid>

        <Grid Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="2">


            <Button
                x:Name="SaveAndQuitButton"
                  Click="ButtonClickSaveAndQuit"
                Content="Save and quit"
                Width="100"
                Height="40"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" 
                Margin="10,10,10,10"
                
                />



        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" >

            <Popup x:Name="PopupNoSerialNumberConstructor" Placement="Center" IsOpen="False" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="LightGray" BorderBrush="Black" BorderThickness="1" Padding="10">
                    <TextBlock Text="PLease enter a serial Number!" />
                </Border>
            </Popup>
            <StackPanel  VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,20">

                <Image
                       Height="150"
                       Width="150"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="10,0,0,20"
                    Name="ReleveImagepage"
                    Source="{Binding ImageReleve, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    
                 />
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <Label x:Name="labelSerialNumber" Content="Serial Number: " Foreground="White" VerticalAlignment="Top"                               Margin="10,0,0,10"
                    ></Label>
                    <TextBox  x:Name="TextBoxSerialNumber"
                              Width="150"
                              Margin="10,0,0,10"
                              />
                    
                    



                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label                             
                    Margin="10,0,0,10"
                    Content="Constructor: " 
                        x:Name="labelConstructor"
                        Foreground="White"></Label>
                    <TextBox  x:Name="TextBoxConstructor"
                              Width="150"
                              Margin="10,0,0,10"

                              />
                    
                </StackPanel>
               
                <Button
                x:Name="YesButton"
                  Click="ButtonClickYes"
                Content="yes [Y]"
                Width="66"
                Height="30"
                HorizontalAlignment="Center"
                 
                />

                <Button
                x:Name="NoButton"
                  Click="ButtonClickNo"
                Content="no [N]"
                Width="66"
                Height="30"
                 HorizontalAlignment="Center"
                
                />

               

            </StackPanel>




        </Grid>












    </Grid>
</Page>
