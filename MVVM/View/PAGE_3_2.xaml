<Page x:Class="ApplicationInventaire.MVVM.View.PAGE_3_2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationInventaire.MVVM.View"
      xmlns:GlobalProjectData="clr-namespace:ApplicationInventaire.Core.GlobalProjectData"
      mc:Ignorable="d" 
      Title="PAGE_3_2"
      Background="#116396"
      d:DesignHeight="600" d:DesignWidth="800"
      

      >

    <Grid    Margin="50,50,45,185" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="122*" />
            <ColumnDefinition Width="19*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="21*"/>

        </Grid.RowDefinitions>


        <Canvas  Grid.Row="0" Grid.Column="0" x:Name="myCanva" >


            <Image  x:Name="CurrentSectionImage"  
                    Stretch="UniformToFill"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Source="{Binding ImageSection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,50"
                    />
            <Image x:Name="RedCircleImage" 
                   Source="C:\Users\regnaulte\Documents\VSPROJECTS\VisualStudio\ApplicationInventaire\Image\redCircle.png"
                   Height="25"
                   Width="25"/>
            <Label Foreground="Red" x:Name="LabelNameTag" Content="{Binding CurrentPiece.PieceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   ></Label>

        </Canvas>


        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,14,0">


            <StackPanel Orientation="Horizontal"
                        Width="300"
                        Height="45"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">


                <Label Foreground="White" Content="Comment: " Height="30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                <TextBox Width="300" Height="50" TextWrapping="WrapWithOverflow"/>
            </StackPanel>


        </Grid>

        <Grid Grid.Row="1"  Grid.Column="1">


            <Button
                x:Name="SaveAndQuitButton"
                  Click="ButtonClickSaveAndQuit"
                Content="Save and quit"
                Width="100"
                Height="40"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" 
                Margin="10,10,10,10"
                
                />



        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" >


            <StackPanel  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">

                <Button
                x:Name="YesButton"
                  Click="ButtonClickYes"
                Content="yes [Y]"
                Width="66"
                Height="30"
                 
                />

                <Button
                x:Name="NoButton"
                  Click="ButtonClickNo"
                Content="no [N]"
                Width="66"
                Height="30"
                 HorizontalAlignment="Center"
                
                />

            </StackPanel>




        </Grid>


        <Border x:Name="ReleveImageBorder" Margin="365,10,-270,150" Grid.Column="1"  >
            <Image  x:Name="CurrentReleveImage"  Stretch="Uniform" Source="{Binding imageReleve, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="1057,74,32,410"/>


        </Border>











    </Grid>
</Page>
