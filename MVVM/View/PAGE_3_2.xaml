<Page x:Class="ApplicationInventaire.MVVM.View.PAGE_3_2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationInventaire.MVVM.View"
      xmlns:globalProjectData="clr-namespace:ApplicationInventaire.Core.GlobalProjectData"

      
      mc:Ignorable="d" 
      Title="PAGE_3_2"
Background="#116396 "
      d:DesignHeight="450" d:DesignWidth="800"
      
       
      >


    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*" />
            <ColumnDefinition Width="41*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <Canvas 
                x:Name="myCanva"
                Margin="10,10,10,10"
           
                >
            <Canvas.Background  >
                <ImageBrush x:Name="BackgroundImageSection" ImageSource="{Binding ImageSection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Stretch="Uniform" />

            </Canvas.Background>



            <Image x:Name="RedFrameImage" 
                   Source="{Binding RedFramePath,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Height="50"
                   Width="50"/>

            <Label Foreground="Red" 
               x:Name="LabelNameTag" 
               Content="{Binding CurrentPiece.PieceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               FontSize="22"
               FontWeight="Normal"
                   ></Label>

        </Canvas>


        <Grid Grid.Row="1" Grid.Column="0">


            <StackPanel Orientation="Horizontal"
                        Width="300"
                        Height="45"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">


                <Label Foreground="White" Content="Comment: " FontSize="15" Height="30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

                <Border CornerRadius="5" Background="#353340" Height="44"  Width="261">

                    <TextBox x:Name="TextBoxComment" 
                             TextWrapping="WrapWithOverflow"
                             Background="Transparent" Margin="0,-4,-42,-7"
                             Foreground="#cfcfcf"/>


                </Border>
            </StackPanel>


        </Grid>

        <Grid Grid.Row="1" Grid.Column ="1">


            <Button
                Style="{StaticResource ButtonTheme2}"
                x:Name="SaveAndQuitButton"
                  Click="ButtonClickSaveAndQuit"
                Content="Save and quit"
                Width="164"
                Height="50"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                
                />



        </Grid>

        <Grid Grid.Row="0" Grid.Column="1"  >

            <Popup x:Name="PopupNoSerialNumberConstructor" Placement="Center" IsOpen="False" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Border Background="LightGray" BorderBrush="Black" BorderThickness="1" Padding="10">
                    <TextBlock Text="PLease enter a serial Number!" />
                </Border>
            </Popup>



            <StackPanel  Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,0,0,20">
                <Image
                       Height="200"
                       Width="200"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    Stretch="Uniform"
                    Margin="0,10,0,20"
                    x:Name="ImageReleveName"
                   
                    Source="{Binding ImageReleve, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    
                 />

                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <Label x:Name="labelSerialNumber" FontSize="15" Content="Serial Number: " Foreground="White" VerticalAlignment="Top"                               Margin="10,0,0,10"
                    ></Label>
                    <Border CornerRadius="5" Background="#353340" Height="30"  Width="100">
                        <TextBox  x:Name="TextBoxSerialNumber"
                              Width="100"
                                  Background="Transparent" Height="27"
                                   Foreground="#cfcfcf"
                              />

                    </Border>






                </StackPanel>
                <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <Label                             
                    Margin="10,0,0,10"
                    Content="Constructor:     " 
                        FontSize="15"
                        x:Name="labelConstructor"
                        Foreground="White"></Label>

                    <Border CornerRadius="5" Background="#353340" Height="30" Width="100">
                        <TextBox  x:Name="TextBoxConstructor"
                                  Background="Transparent"
                                   Foreground="#cfcfcf"

                              Width="100"
                              Margin="3,0,-3,0"

                              />
                    </Border>

                </StackPanel>

                <Button
                    Style="{StaticResource ButtonTheme2}"
                x:Name="YesButton"
                  Click="ButtonClickYes"
                Content="yes"
                Width="66"
                Height="30"
                Margin="10"
                HorizontalAlignment="Center"
                 
                />

                <Button
                    Style="{StaticResource ButtonTheme2}"
                x:Name="NoButton"
                  Click="ButtonClickNo"
                Content="no"
                Width="66"
                 Margin="10"

                Height="30"
                 HorizontalAlignment="Center"
                
                />



            </StackPanel>




        </Grid>












    </Grid>
</Page>
